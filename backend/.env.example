# ========================================
# APPLICATION
# ========================================
NODE_ENV=production
PORT=3001

# ========================================
# DATABASE
# ========================================
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/community_db
POSTGRES_PASSWORD=your_password_here

# ========================================
# REDIS (Session Store)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# SESSIONS & SECURITY
# ========================================
# Session secret (generate with: openssl rand -hex 64)
SESSION_SECRET=GENERATE_WITH_openssl_rand_hex_64

# Admin session secret (generate with: openssl rand -hex 64)
ADMIN_SESSION_SECRET=GENERATE_WITH_openssl_rand_hex_64

# Email encryption key (32 bytes base64) - Phase C3
# EMAIL_ENCRYPTION_KEY=GENERATE_WITH_openssl_rand_base64_32

# CSRF secret (generate with: openssl rand -hex 32)
# CSRF_SECRET=GENERATE_WITH_openssl_rand_hex_32

# ========================================
# CORS
# ========================================
CORS_ORIGIN=http://localhost:3000

# ========================================
# MONITORING
# ========================================
GRAFANA_PASSWORD=your_grafana_password_here

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info

# ========================================
# RATE LIMITING (Phase C2 - not yet implemented)
# ========================================
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=100
